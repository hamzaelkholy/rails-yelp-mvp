<div class='container'>
<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.address %></p>
<p>Cuisine: <strong><%= @restaurant.category %></strong></p>
<% @restaurant.reviews.each do |review| %>
<% review.rating.times do %>
  *
<% end %>
<p><%= review.content %></p>
<% end %>
<%= link_to 'Edit', edit_restaurant_path(@restaurant), class: 'btn btn-primary mt-3' %>
<%= link_to 'Back', restaurants_path, class: 'btn btn-primary mt-3' %>
<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary mt-3' %>
</div>