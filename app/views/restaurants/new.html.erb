<div class="container mt-3">
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category, :collection => ['chinese', 'belgian', 'japanese', 'italian', 'french'], :prompt => 'Choose a category...' %>
    <%= f.input :phone_number %>
    <%= f.submit "Create restaurant", class: 'btn btn-primary mt-3'%>
  <% end %>
  <div>
    <%= link_to "back", restaurants_path, class: 'btn btn-primary mt-3' %>
  </div>
</div>
